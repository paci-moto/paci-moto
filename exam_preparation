max_bad_grades = int(input())
bad_grades = 0
sum_grades = 0

num_task = 0
last_task = ""
while bad_grades <= max_bad_grades:
    name_task = input()
    if name_task == "Enough":
        print(f"Average score: {(sum_grades / num_task):.2f}")
        print(f"Number of problems: {num_task}")
        print(f"Last problem: {last_task}")
        break
    grade = int(input())
    if grade <= 4:
        sum_grades += grade
        bad_grades += 1
        num_task += 1
        last_task = name_task
        if bad_grades >= max_bad_grades:
            print(f"You need a break, {bad_grades} poor grades.")
            break
    if grade > 4:
        sum_grades += grade
        num_task += 1
        last_task = name_task



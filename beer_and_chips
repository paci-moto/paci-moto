import math

fan_name = input()
budget = float(input())
beer_bottles = int(input())
chips_packs = int(input())

beer_total_price = beer_bottles * 1.20
chips_price = beer_total_price * 0.45
chips_total_price = math.ceil(chips_price * chips_packs)
total_price = chips_total_price + beer_total_price

if budget >= total_price:
    money_left = budget - total_price
    print(f'{fan_name} bought a snack and has {money_left:.2f} leva left.')
else:
    money_needed = total_price - budget
    print(f'{fan_name} needs {money_needed:.2f} more leva!')

